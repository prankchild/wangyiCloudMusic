/* page/index/index.wxss */
.banner{
    width: 100%;
    height: 300rpx;
}
.banner image{
    width: 100%;
    height: 100%;
}

/* 五个图标导航区域 */
.navContainer{
    display: flex;
}
.navItem{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}
.navItem .iconfont{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx; 
    background-color: #dd2d1e;
    font-size: 50rpx;
    color: #fff;
    margin: 20rpx 0;
}
.navItem text{
    font-size: 20rpx;
}

/* 推荐歌曲区域 */
.recommendContainer{
    padding: 20rpx;
    
}

/* 推荐内容区域 */
.recommendScroll{
    display: flex;
    height: 300rpx;
}
.scrollItem{
    width: 200rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
}

.scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.scrollItem text{
    font-size: 26rpx;
    /* 单行文本移除隐藏 */
    /* display: block; */
    /* white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; */
    /* 多行文本溢出 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical; 
    -webkit-line-clamp: 2;
    word-break: break-all;
}

/* 排行榜 */
.topList{
    padding: 20rpx;
}
.topListSwiper{
    height: 450rpx; 
}
.swiperItem{
    width: 96%;
    /* background-color: #fbfbfb;
    border-radius: 10rpx; */
    border-radius: 20rpx;
    background-color: #fbfbfb;
    margin-top: 20rpx;
}
.swiperItem .title{
    font-size: 32rpx;
    line-height: 80rpx;
    width: 100%;
    text-align: center;
    font-weight: bold;
}
.musiceItem{
    display: flex;
    padding-bottom: 10rpx;
    margin-bottom: 10rpx;
}
.musiceItem:last-child{
    padding-bottom: 30rpx;
}
.musiceItem image{
    margin-left: 30rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 6rpx;
}
.musiceItem .count{
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
.musiceItem .musiceName{
    height: 100rpx;
    line-height: 100rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}